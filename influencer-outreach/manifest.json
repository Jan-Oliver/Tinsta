{
    "manifest_version": 3,
    "name": "Email Sender Panel",
    "version": "1.0",
    "description": "Quickly send emails to creators and influencers",
    "permissions": ["sidePanel", "tabs", "storage"],
    "action": {
      "default_title": "Open Email Panel"
    },
    "side_panel": {
      "default_path": "panel.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }